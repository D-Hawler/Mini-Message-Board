<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Message board</title>
  </head>
  <body>
    <%- include('components/header.views.ejs') %>
    <main>
      <div>
        <div class="scroll">
          <% if (messages && messages.length > 0) { %> <%
          messages.forEach(function(block) { %> <%-
          include('components/chatBlock.views.ejs', { user: block.user, text:
          block.text, time: block.added.toLocaleTimeString([], { hour:
          '2-digit', minute: '2-digit' }), date:
          block.added.toLocaleDateString() }) %> <% }); %> <% } else { %>
          <p>no message</p>
          <% } %>
        </div>
      </div>
      <div>
        <% if (formOpen) { %>
            <%- include('components/form.views.ejs') %>
        <% } else { %>
            <button><a href="/new">open forn</a></button>
        <% } %>
      </div>
    </main>
    <%- include('components/footer.views.ejs') %>
  </body>
</html>
